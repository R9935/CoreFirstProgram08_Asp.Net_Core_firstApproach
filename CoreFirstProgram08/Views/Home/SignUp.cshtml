@model CoreFirstProgram08.Models.UserInfo

@{
    ViewData["Title"] = "SignUp";
}



@if(ViewBag.ID == null)
{
    <h2>New Register User</h2>
}
else
{
    <h2>Update here</h2>
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="ID"type="hidden" class="form-control" />

            <div class="form-group">


                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName"  placeholder="Please enter the  Name...." class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password"  placeholder="Please enter the  Password...." class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


            

            <div class="form-group">



@if(ViewBag.ID == null)
{
   <input type="submit" value="Register" class="btn btn-primary" />
}
else
{
    <input type="submit" value="Update info" class="btn btn-success" />
}





               
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UserList">Back to UserList</a>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
